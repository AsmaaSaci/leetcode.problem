public class Solution
{
    public int LongestPalindrome(string[] words)
    {
        var result = 0;
        var freq = new int[26, 26];

        foreach (var word in words)
        {
            var cl = word[0] - 'a';
            var cr = word[1] - 'a';

            if (freq[cr, cl] != 0)
            {
                freq[cr, cl]--;
                result += 4;
            }
            else
            {
                freq[cl, cr]++;
            }
        }

        if (result % 2 == 0)
        {
            for (var i = 0; i < 26; i++)
            {
                if (freq[i, i] != 0)
                    return result + 2;
            }
        }

        return result;
    }
}
