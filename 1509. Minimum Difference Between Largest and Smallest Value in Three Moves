public class Solution {
    public int MinDifference(int[] nums) {
        if (nums.Length <= 4) {
            return 0;
        }
        Array.Sort(nums);
        int ans = Int32.MaxValue;
        for (int i = 0; i < 4; i++) {
            ans = Math.Min(ans, nums[nums.Length - 4 + i] - nums[i]);
        }
        return ans;
    }
}
