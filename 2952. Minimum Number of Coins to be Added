using System;

public class Solution {
    public int MinimumAddedCoins(int[] coins, int target) {
        Array.Sort(coins);
        long maxReach = 0;
        int addedCoins = 0;

        foreach (int coin in coins) {
            while (coin > maxReach + 1) {
                maxReach += maxReach + 1;
                addedCoins++;
            }
            maxReach += coin;
        }

        while (maxReach < target) {
            maxReach += maxReach + 1;
            addedCoins++;
        }

        return addedCoins;
    }

}
