public class Solution {
    public int GetMaxLen(int[] nums) {
               int ret = 0;

        for (int i = 0; i < nums.Length; i++)
        {
            if (nums[i] == 0) continue;
            int j = i;
            int count = 0;
            int firstNeg = -1;

            while (j < nums.Length && nums[j] != 0)
            {
                count += (nums[j] < 0) ? 1 : 0;
                if (count % 2 == 0)
                    ret = Math.Max(ret, j - i + 1);
                else if (firstNeg != -1)
                    ret = Math.Max(ret, j - firstNeg);

                if (firstNeg == -1 && nums[j] < 0)
                    firstNeg = j;
                j++;
            }
            i = j;
        }
        return ret;
    }
}
