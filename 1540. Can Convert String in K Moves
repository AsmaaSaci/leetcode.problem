public class Solution {
    public bool CanConvertString(string s, string t, int k) {
        Dictionary<int,int> set = new();
        if(s.Length != t.Length) return false;
        for(int i = 0;i<s.Length;i++)
        {
            if(s[i]!=t[i])
            {
                var diff = t[i]-s[i];
                if(diff<0) diff = 26+diff;
                
                if(set.ContainsKey(diff))
                {
                    set[diff] +=26;
                    diff = set[diff];
                }
                else
                {
                    set[diff] = diff;
                }
                if(diff>k)
                {
                    return false;
                }
            }
        }

        return true;
    }
}
