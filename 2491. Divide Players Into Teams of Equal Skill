public class Solution {
    public long DividePlayers(int[] skill) {
        long sum = 0;
        foreach (int s in skill) {
            sum += s;
        }
        
        int n = skill.Length;
        
        if (n == 2) {
            return (long)skill[0] * skill[1];
        }
        
        if (sum % (n / 2) != 0) {
            return -1;
        }
        
        Array.Sort(skill);
        long targetSum = sum / (n / 2);
        long result = 0;
        
        for (int i = 0; i < n / 2; i++) {
            int l = skill[i];
            int r = skill[n - 1 - i];
            
            if (l + r != targetSum) {
                return -1;
            }
            
            result += (long)l * r;
        }
        
        return result;
    }
}
