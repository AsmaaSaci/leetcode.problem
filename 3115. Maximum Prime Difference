public class Solution {
    public int MaximumPrimeDifference(int[] nums) {
        var primes = new bool[100];
        for(var i = 2; i <= 100; i ++) {
            primes[i - 1] = true;
        }

        // getting primes
        for(var i = 2; i <= 50; i ++) {
            if (primes[i - 1]) {
                var cur = i * i;
                while(cur <= 100) {
                    primes[cur-1]=false;
                    cur += i;
                }
            }
        }

        // find result
        var max = -1;
        var min = -1;

        for(var i = 0; i < nums.Length; i ++) {
            if (primes[(nums[i] - 1)]) {
                max = i;
                if (min == -1) {
                    min = i;
                }
            }
        }

        return max - min;
    }
}
