public class Solution {
    public string BreakPalindrome(string palindrome) 
	{
        
        int pLength = palindrome.Length; 
        if(pLength == 1) return "";
        var sb = new StringBuilder(palindrome);
        for(int i=0; i < pLength/2; i++)
		{
            if(palindrome[i]!='a')
			{             
                sb[i] = 'a';
                return sb.ToString();
            }
        }               
		sb[pLength-1] = 'b';
		return sb.ToString();        
    }
}
