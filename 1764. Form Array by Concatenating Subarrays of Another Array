public class Solution {
    public bool CanChoose(int[][] groups, int[] nums) {
        int m = groups.Length, n = groups[0].Length, lenN = nums.Length;

        int r = 0, idx = 0;
        while(idx < lenN)
        {
            if(nums[idx] == groups[r][0])
            {
                bool isValid = true;
                for(int j = 1; j < groups[r].Length; j++)
                {
                    if(idx+j >= lenN || nums[idx+j] != groups[r][j])
                    {
                        isValid = false;
                        break;
                    }
                }

                if(isValid)
                {
                    idx += groups[r].Length;

                    if(++r == m)
                        return true;
                }
                else
                    idx++;
            }
            else
                idx++;
        }

        return r >= m;
    }
}
