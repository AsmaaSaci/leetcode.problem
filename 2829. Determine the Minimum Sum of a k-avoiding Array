public class Solution {
    public int MinimumSum(int n, int k) {
        List<int> nums = new List<int>();
        int sum = 0;
        int current = 1;

        while (nums.Count < n)
        {
            // Перевіряємо, чи можемо додати поточне число
            if (!nums.Contains(k - current))
            {
                nums.Add(current);
                sum += current;
            }
            current++;
        }

        return sum;
    }
}
