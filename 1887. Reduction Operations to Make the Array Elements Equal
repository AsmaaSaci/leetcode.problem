public class Solution {
    public int ReductionOperations(int[] nums) {
        Array.Sort(nums);
        int operations = 0, increment = 0;

        for (int i = 1; i < nums.Length; i++) {
            if (nums[i] != nums[i - 1]) {
                increment++;
            }
            operations += increment;
        }

        return operations;
    }
}
