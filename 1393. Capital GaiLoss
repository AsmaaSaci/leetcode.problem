# Write your MySQL query statement below

SELECT 
    stock_name,
    SUM(
        CASE 
            WHEN operation = 'Buy' THEN -price   -- Money out (ouch ðŸ’¸)
            WHEN operation = 'Sell' THEN price   -- Money in (yay ðŸ’°)
        END
    ) AS capital_gain_loss
FROM Stocks
GROUP BY stock_name;
