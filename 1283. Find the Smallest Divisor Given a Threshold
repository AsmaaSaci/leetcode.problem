public class Solution {
    public int SmallestDivisor(int[] nums, int threshold) {
        int left = 1;
        int right = nums.Max();
        int result = right;

        while(left<=right){
            int mid = left+(right-left)/2;
            int sum = 0;
            foreach(int num in nums)
            {
                sum = sum + (num + mid -1)/mid;
            }
            if(sum<=threshold){
                result = mid;
                right = mid -1;
                
            }
            else{
                left = mid+1;
            }
        }
        return result;
    
    }
}
