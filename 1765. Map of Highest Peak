public class Solution {
    public int[][] HighestPeak(int[][] isWater) {
        Queue<Tuple<int,int>> queue = new();
        int n = isWater.Length, m = isWater[0].Length;
        int[][] heights = new int[n][];
        for(int i=0;i<n;i++)
            heights[i] = new int[m];
        

        // 1.2. put the height & add the cells that have water in QUEUE
        for(int i=0;i<n;i++) {
            for(int j=0;j<m;j++) {
                if(isWater[i][j] == 1) {
                    heights[i][j] = 0;
                    queue.Enqueue(new Tuple<int,int>(i,j)); 
                }
                else{
                    heights[i][j] = -1;
                }
            }
        }

        // take the cell in the queue, and put all the around it with height+1
        while(queue.Count > 0)
        {
            var pair = queue.Dequeue();
            int x = pair.Item1, y = pair.Item2;
            int[] dx={1,-1,0,0};
            int[] dy={0,0,1,-1};
            for(int i=0;i<4;i++)
            {
                int newx = x + dx[i];
                int newy = y + dy[i];
            if(newx>=0 && newy>=0 && newx<n && newy<m && heights[newx][newy] == -1)
            {
                heights[newx][newy] = heights[x][y]+1;
                queue.Enqueue(new Tuple<int,int>(newx, newy));
            }
            }
        }
        return heights;
    }
}   
