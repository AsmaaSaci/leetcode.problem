public sealed class Solution 
{
    public int[] SortJumbled(int[] mapping, int[] nums) =>
        nums
            .Select(n => 
            {
                var m = n == 0 ? mapping[0] : 0;
                var j = 1;
                var k = n;

                while(n > 0) 
                {
                    var c = n % 10;
                    m = mapping[c] * j + m;
                    n /= 10;
                    j *= 10;
                }

                return (n: k, m: m, i: i);
            })
            .OrderBy(t => t.m)
            .Select(t => t.n)
            .ToArray();
}
