public class Solution {
    private int maxDep = 0;
    private int sum = 0;

    public int DeepestLeavesSum(TreeNode root) {
        DFS(root, 0);
        return sum;
    }

    private void DFS(TreeNode? node, int depth) {
        if (node == null) return;

        if (depth > maxDep) {
            sum = node.val;
            maxDep = depth;
        } else if (depth == maxDep) {
            sum += node.val;
        }

        DFS(node.left, depth + 1);
        DFS(node.right, depth + 1);
    }
}
