public class Solution {
    public int NumSub(string s) {
        int mod = (int)Math.Pow(10,9)+7;
        int ones = 0;
        long res = 0;
        foreach(char c in s)
        {
            if(c == '1')
                ones++;
            else
            {
                res = (res + (long)(ones+1)*ones/2)%mod;
                ones = 0;
            }
        }

        res = (res + (long)(ones+1)*ones/2)%mod;
        return (int)res;
    }
}
