public class Solution {
    public int MaxConsecutive(int bottom, int top, int[] special) {
        int len = special.Length, maxLen = 0;
        List<int> keys = new List<int>([bottom, top]);
        bool[] flag = new bool[2];
        foreach(int n in special)
        {
            if(n > bottom && n < top)
                keys.Add(n);

            if(n == bottom)
                flag[0] = true;

            if(n == top)
                flag[1] = true;
        }

        keys.Sort();
        int kLen = keys.Count;
        
        for(int i = 1; i < kLen; i++)
        {
            int diff = keys[i]-keys[i-1]-1;
            if(i == 1 && !flag[0] || i == kLen-1 && !flag[1] )
                diff++;

           // Console.WriteLine($"{i}th : diff is {diff}, {keys[i-1]} to {keys[i]}");    
            maxLen = Math.Max(maxLen, diff);
        }

        return maxLen;
    }
}
