public class Solution {
    public int[] RearrangeArray(int[] nums) {
        int len = nums.Length;
        for(int i = 1; i < len-1; i++)
        {
            if(nums[i-1]+nums[i+1] - 2*nums[i] == 0)
            {
                int tmp = nums[i];
                nums[i] = nums[i+1];
                nums[i+1] = tmp;
            }
        }

        for(int i = len-2; i > 0; i--)
        {
            if(nums[i-1]+nums[i+1] - 2*nums[i] == 0)
            {
                int tmp = nums[i];
                nums[i] = nums[i-1];
                nums[i-1] = tmp;
            }
        }

        return nums;
    }
}
