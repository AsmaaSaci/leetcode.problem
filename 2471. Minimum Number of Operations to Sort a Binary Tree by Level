public class Solution {
    public int MinSwapsToSort(int[] arr) {
        int n = arr.Length;
        var indexedArr = new Tuple<int, int>[n];
        for (int i = 0; i < n; i++) {
            indexedArr[i] = Tuple.Create(arr[i], i);
        }
        Array.Sort(indexedArr, (a, b) => a.Item1.CompareTo(b.Item1));
        bool[] visited = new bool[n];
        int swaps = 0;

        for (int i = 0; i < n; i++) {
            if (visited[i] || indexedArr[i].Item2 == i) {
                continue;
            }

            int cycleSize = 0;
            int j = i;
            while (!visited[j]) {
                visited[j] = true;
                j = indexedArr[j].Item2;
                cycleSize++;
            }

            if (cycleSize > 1) {
                swaps += cycleSize - 1;
            }
        }

        return swaps;
    }

    public int MinimumOperations(TreeNode root) {
        if (root == null) return 0;

        var queue = new Queue<TreeNode>();
        queue.Enqueue(root);
        int operations = 0;

        while (queue.Count > 0) {
            int levelSize = queue.Count;
            var level = new int[levelSize];
            for (int i = 0; i < levelSize; i++) {
                TreeNode node = queue.Dequeue();
                level[i] = node.val;

                if (node.left != null) queue.Enqueue(node.left);
                if (node.right != null) queue.Enqueue(node.right);
            }

            operations += MinSwapsToSort(level);
        }

        return operations;
    }
}
