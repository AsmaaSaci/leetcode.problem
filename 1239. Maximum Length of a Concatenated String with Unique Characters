public class Solution {
    public int MaxLength(IList<string> arr, int i = 0, string s = "") {
       
        //HashSet leaves unique elements 
        var hs = new HashSet<char>(s);
        //if HashSet count of unique elements != length of current string
        //that means that we have non-unique elements in the current branch
		//therefore this branch is not valid
        if(hs.Count()!=s.Length) return 0; 
		// it's just memory optimization
		hs = null;
        //if we have reached last element of the tree
        if(i == arr.Count()) return s.Length;
        //go deeper into the tree
        return Math.Max(MaxLength(arr, i + 1, s + arr[i]), MaxLength(arr, i + 1, s ));
		
    }
}
