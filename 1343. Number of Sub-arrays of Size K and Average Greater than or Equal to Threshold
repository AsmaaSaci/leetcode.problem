public class Solution {
    public int NumOfSubarrays(int[] arr, int k, int threshold) {
        int targetSum = k * threshold;
        int windowSum = 0;
        int count = 0;

        for (int i = 0; i < arr.Length; i++) {
            windowSum += arr[i];

            if (i >= k) {
                windowSum -= arr[i - k];
            }

            if (i >= k - 1 && windowSum >= targetSum) {
                count++;
            }
        }

        return count;
    }
}
