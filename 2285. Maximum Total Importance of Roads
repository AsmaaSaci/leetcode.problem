public class Solution {
    public long MaximumImportance(int n, int[][] roads) {
        int[] freq = new int[n];
        foreach(int[] cur in roads)
        {
            freq[cur[0]]++;
            freq[cur[1]]++;
        }

        Array.Sort(freq);
        long res = 0;
        for(int i = 0; i < n; i++)
        {
            res += (long)(i+1)*freq[i];
        }

        return res;
    }
}
