public class Solution {
    public int MinCapability(int[] nums, int k) {
        int start = 1, end = nums.Max();

        while(start < end){
            int mid = (start + end)/2;

            if(IsPossible(nums, k, mid)){
                end = mid;
            }
            else{
                start = mid + 1;
            }
        }

        return end;
    }

    private bool IsPossible(int[] nums, int k, int val){
        int count = 0, i = 0;

        while(i < nums.Length){
            if(nums[i] <= val){
                i += 2;
                count++;
            }
            else{
                i++;
            }
        }

        return count >= k;
    }
}
