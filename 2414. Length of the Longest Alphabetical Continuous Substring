public class Solution {
    public int LongestContinuousSubstring(string s) {
        int longest = 1;
        int current = 1;

        for(int i = 1; i < s.Length; i++) {
            if(s[i] - s[i-1] == 1) { // difference of 1 = continuous
                current++;
            } else { // reset current if not continuous
                current = 1;
            }
            longest = Math.Max(current, longest);
        }

        return longest;
    }
}
