/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     public int val;
 *     public TreeNode left;
 *     public TreeNode right;
 *     public TreeNode(int val=0, TreeNode left=null, TreeNode right=null) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
public class Solution {
            public int SumEvenGrandparent(TreeNode root)
            {
                int[] arr = new int[1];
                arr[0] = 0;

                InOrder(root, 0, 0, arr);

                return arr[0];
            }

            private void InOrder(TreeNode root, int parentNodeVal, int currentNodeValue, int[] arr)
            {
                if (root == null) return;

                if (parentNodeVal > 0 && parentNodeVal % 2 == 0) arr[0] += root.val;

                InOrder(root.left, currentNodeValue, root.val, arr);
                InOrder(root.right, currentNodeValue, root.val, arr);
            }
}
