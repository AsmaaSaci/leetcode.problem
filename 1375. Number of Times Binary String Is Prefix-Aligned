public class Solution {
    public int NumTimesAllBlue(int[] flips) {          
        int idx = 0;
        int count = 0;
        int maxUpdatedIndex = -1;
        while(idx < flips.Length)
        {  
            maxUpdatedIndex = Math.Max(flips[idx], maxUpdatedIndex);
            
            if(maxUpdatedIndex == idx+1) count++;
            
            idx++;
        }

        return count;
    }
}



