public class Solution {
    public int[] NumMovesStones(int a, int b, int c) {
        int[] ids = [a, b, c];
        int[] res = new int[2];
        Array.Sort(ids);

        int space1 = ids[1]-ids[0]-1, space2 = ids[2]-ids[1]-1;

        // case 1: already consecutive:
        if(space1 == 0 && space2 == 0)
            return res;

        if(space1 <= 1 || space2 <= 1) // short distance only has one empty space : min move should be 1;
            res[0] = 1;
        else
            res[0] = 2;

        res[1] = ids[2]-ids[0]+1-3; // total empty spaces between min and max positions

        return res;
    }
}
