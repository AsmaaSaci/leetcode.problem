public class Solution {
    public int NumSub(string s) {
        const int MOD = 1000000007;
        long res = 0;
        int count = 0;

        foreach (char c in s) {
            if (c == '1') {
                count++;
                res += count; // each '1' extends substrings ending here
            } else {
                count = 0;
            }
            if (res >= MOD) res %= MOD;
        }

        return (int)(res % MOD);
    }
}
