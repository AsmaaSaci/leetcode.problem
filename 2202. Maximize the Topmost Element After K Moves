public class Solution {
    public int MaximumTop(int[] nums, int k) {
        int len = nums.Length;
        if(k == 0)
            return nums[0];

        if(len == 1)
            return k%2 == 0 ? nums[0] :-1;

        //Console.WriteLine($"len is {len}, and k is {k}");
        int maxV = 0, upLimit = Math.Min(k-1, len-1);
        for(int i = 0; i < upLimit; i++)
        {
            maxV = Math.Max(maxV, nums[i]);
        }

        if(k > len)
            maxV = Math.Max(maxV, nums[len-1]);
        else if(k < len)
            maxV = Math.Max(maxV, nums[k]);

        return maxV;
    }
}
