public class Solution {
    public int MinimumDeletions(string s) {
        int len = s.Length;
        int[,] freq = new int[len+1, 2];

        for(int i = 0; i < len; i++)
        {
            char c = s[i];
            if(c == 'a')
            {
                freq[i+1, 0] = freq[i, 0] +1;
                freq[i+1, 1] = freq[i, 1];
            }
            else
            {
                freq[i+1, 0] = freq[i,0];
                freq[i+1, 1] = Math.Max(freq[i,0], freq[i,1])+1;
            }
        }

        return len - Math.Max(freq[len,0], freq[len,1]);
    }
}
